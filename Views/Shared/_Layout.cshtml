<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Harness .NET Sample App using the SDK</title>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>

<body>
    <header>
        <h1>.NET Sample App using the SDK</h1>
    </header>
    <div class="container">
        <main>
            @RenderBody()
        </main>
    </div>
    <footer>
        <div>
            &copy; 2023 - Harness .NET SDK
        </div>
    </footer>

    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>